{
  "name": "lcbingo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "devrepl": "concurrently --handle-input \"npm run dev:backendrepl\" \"npm run dev:frontend\"",
    "dev:backend": "tsx watch src/app.ts",
    "dev:backendrepl": "tsx src/repl.ts",
    "dev:frontend": "tsc -w --project ./src/frontend/tsconfig.json",
    "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\"",
    "build:backend": "tsc --project ./tsconfig.build.json",
    "build:frontend": "tsc --project ./src/frontend/tsconfig.json",
    "postbuild": "cpy src/views/* dist/views --flat",
    "prettier": "prettier . --write",
    "start": "node ./dist/app.js"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "concurrently": "^9.2.0",
    "cpy-cli": "^5.0.0",
    "dotenv": "^17.2.1",
    "prettier": "3.6.2",
    "repl": "^0.1.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3"
  },
  "dependencies": {
    "express": "^5.1.0",
    "js-confetti": "^0.12.0",
    "nanoid": "^5.1.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  }
}